<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <!-- add product_manager to product template form view -->
    <record id="product_template_form_with_product_manager" model="ir.ui.view">
        <field name="name">product.template.manager.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="product_manager"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_default_proc_qty">
        <field name="name">product.template.default_proc_qty.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="default_proc_qty" string="Procurement Qty" attrs="{'invisible': [('type','!=','product')]}"/>
            </xpath>
        </field>
    </record>

</openerp>
