<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="assets_azi_check" name="azi check pdf assets" inherit_id="l10n_us_check_printing.assets_common">
    <xpath expr="." position="inside">
        <link href="/azi_account/static/src/less/report_check_azi.less" rel="stylesheet"/>
    </xpath>
</template>

<template id="ckus_check_azi" inherit_id="l10n_us_check_printing.ckus_check">
    <xpath expr="//div/div[@class='ckus_payee_name']" position="replace">
        <table style="line-height: .7; padding: 5px; margin: 175px 0px 0px 95px; font-size: 10pt">
            <tr>
                <td colspan="3" style="width:auto; padding:5px;">
                    <div class="ckus_payee_name" t-esc="page['partner_name']"/>
                </td>
            </tr>
            <tr t-if="o.partner_id.street">
                <td colspan="3" style="width:auto; padding:5px;">
                    <div class="ckus_payee_street" t-esc="o.partner_id.street"/>
                </td>
            </tr>
            <tr t-if="o.partner_id.street2">
                <td style="width:auto; padding:5px;">
                    <div class="ckus_payee_street" t-esc="o.partner_id.street2"/>
                </td>
            </tr>
            <tr>
                <td style="width:auto; padding:5px;">
                    <div class="ckus_payee_street"><t t-esc="o.partner_id.city"/>, <t t-esc="o.partner_id.state_id.code"/> <t t-esc="o.partner_id.zip"/></div>
                </td>
            </tr>
        </table>
    </xpath>
    <xpath expr="//div/div[@class='ckus_memo']" position="replace">
    </xpath>
</template>

</data>
</odoo>
