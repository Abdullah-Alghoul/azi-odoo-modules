<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- add name (Description) field to Initial Demand page on stock.picking form view -->
    <record id="view_picking_form_name" model="ir.ui.view">
        <field name="name">mrp.production.azi.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <button name="%(action_mrp_production_moves)d" position="attributes">
                <attribute name="attrs"/>
            </button>
            <xpath expr="//page/field[@name='move_raw_ids']/tree/field[@name='has_tracking']" position="attributes">
                <attribute name="invisible"/>
                <attribute name="string">Track</attribute>
            </xpath>
        </field>
    </record>

</odoo>
