<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record  id="mrp_production_view_independent_mts_form" model="ir.ui.view">
        <field name="name">mrp.production.independent_mts.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="independent_mts" />
            </xpath>
        </field>
    </record>

    <record  id="view_mrp_production_independent_mts_filter" model="ir.ui.view">
        <field name="name">mrp.production.independent_mts.select</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='inprogress']" position="after">
                <filter string="Independent MTS" name="imts" domain="[('independent_mts','=',True)]"
                    help="Manufacturing Orders representing independent or make-to-stock demand."/>
            </xpath>
        </field>
    </record>

</odoo>
